# List of exceptions, first word allowed when preceded by any of the following
exceptions = {"chapter": ("this", "This"),
              "figure":  ("{",),
              "table":   ("{",),
              "runtime": ("/",),
              "^t":      ("int_0", "psi"),
              "^T":      ("int_0", "psi")}

# List of words that are allowed to be uppercase in titles
uppercase = ["A",
